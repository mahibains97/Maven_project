// Jenkinsfile
pipeline {
    agent any

    tools {
        maven 'My maven' // Name of the Maven tool configured in Jenkins
        jdk 'jdk-11.0.2'        // Name of the JDK configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/mahibains97/Maven_project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}

